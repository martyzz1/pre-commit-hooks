# Example .pre-commit-config.yaml for the generate-ghost-files hook
repos:
  - repo: local
    hooks:
      - id: generate-ghost-files
        name: Generate Ghost Files
        description: Generate ghost files for versioned files to show diffs in PRs
        entry: generate-ghost-files/generate-ghost-files.sh
        stages: [pre-commit]
        args: ['.ghost', 'src/libs/schemas:src/workers']

# Note: After running this hook, you need to manually add the generated ghost files:
# git add **/*.ghost
# git commit -m "Add ghost files for versioned files"

